<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"https://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="grupodamers.modelo">
	<class name="Pedido" table="pedido">
		<id name="numPedido" column="Num_Pedido">
			<generator class="identity"/>
		</id>
		<property name="cantidad" column="Cantidad"/>
		<property name="fecha" column="Fecha_Hora"/>
		<property name="precioEnvio" column="Precio_Envio"/>
		<property name="precioTotal" column="Precio_Total"/>
		<many-to-one name="cliente" column="Cliente"/>
		<many-to-one name="articulo" column="Codigo_Articulo"/>
	</class>
</hibernate-mapping>