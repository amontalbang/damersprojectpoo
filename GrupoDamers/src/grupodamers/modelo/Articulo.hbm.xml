<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"https://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="grupodamers.modelo">
	<class name="Articulo" table="articulo">
		<id name="codigo" column="Codigo_Articulo"/>
		<property name="descripcion" column="Descripcion"/>
		<property name="precioVenta" column="PVP"/>
		<property name="gastosEnvio" column="Gastos_Envio"/>
		<property name="tiempoPrep" column="Tiempo_Preparacion"/>
	</class>
</hibernate-mapping>